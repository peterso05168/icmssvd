j|Button{
	fontSize: 12;
	chromeColor: #3D53B6;
	fontFamily: Arial, Helvetica,sans-serif !important;
	color: #FFFFFF;
	fontWeight:bold;
	cornerRadius: 0;
}

j|Button:disabled{
	font-weight:normal;
	color: #303030;
	
}

mx|ProgressBar{
	fontSize: 16;
	font    : Arial;
}



s|TitleWindow {
	dropShadowEnabled: false;
	borderAlpha: 1.0;
	borderColor: haloSilver;
	backgroundColor: haloSilver;
	cornerRadius: 0;
}

mx|TitleWindow
{
	dropShadowEnabled: false;
	borderAlpha: 1.0;
	cornerRadius: 0;
	borderColor: #404040;
	borderStyle: solid;
}


.appMenuBar
{
	letterSpacing:0;
	backgroundAlpha:1;
	backgroundColor:#ffffff;
	borderColor:#cccccc;
	highlightAlphas:1, 1;
	fillAlphas:1, 0.27;
	fillColors:#ffffff, #ffffff;
	rollOverColor:#66ccff;
	fontWeight:bold;
}

mx|TabNavigator, mx|SuperTabNavigator {
	cornerRadius: 0;
	selectedTabTextStyleName: "selectedTab";
	tabStyleName: "tabButton";
	selectedTabStyleName: "selectedTab";
	selectedFillColors: #445188, #445188;
	selectedFillAlphas: 0, 0;
	selectedFillColorRatios: 1, 1;
	text-roll-over-color:#FFFFFF;
	selected-up-skin: ClassReference("hk.judiciary.fmk.view.component.skin.SelectedTabSkin");
	selected-down-skin: ClassReference("hk.judiciary.fmk.view.component.skin.SelectedTabSkin");
	selected-over-skin: ClassReference("hk.judiciary.fmk.view.component.skin.SelectedTabSkin");
	up-skin: ClassReference("hk.judiciary.fmk.view.component.skin.TabSkin");
	down-skin: ClassReference("hk.judiciary.fmk.view.component.skin.TabSkin");
	over-skin: ClassReference("hk.judiciary.fmk.view.component.skin.TabSkin");
	/*
	chromeColor: green;
	color: red;
	backgroundColor: blue;
	*/
}

.tabButton{
	background-color: #FFFFFF;
	
	font-weight: normal;
	color: #808080;
	text-roll-over-color: #808080;
	
	corner-radius: 0;
	
	border-style: solid;
	border-thickness: 0;
	border-color: #000000;
	textAlign: center;
}



.selectedTab
{
	color: #445188;
	text-roll-over-color: #445188;
	fontSize: 13;
	fontFamily: Arial, Helvetica,sans-serif !important;
	
	fontWeight:bold;
	chromeColor: #445188;
	background-color: #445188;
	
	selected-up-skin: ClassReference("hk.judiciary.fmk.view.component.skin.SelectedTabSkin");
	selected-down-skin: ClassReference("hk.judiciary.fmk.view.component.skin.SelectedTabSkin");
	selected-over-skin: ClassReference("hk.judiciary.fmk.view.component.skin.SelectedTabSkin");
	up-skin: ClassReference("hk.judiciary.fmk.view.component.skin.TabSkin");
	down-skin: ClassReference("hk.judiciary.fmk.view.component.skin.TabSkin");
	over-skin: ClassReference("hk.judiciary.fmk.view.component.skin.TabSkin");
	skin: ClassReference("hk.judiciary.fmk.view.component.skin.TabSkin");
	textAlign: center;
} 

.selectedTabText {
	font-weight: bold;
	textRollOverColor: #445188;
	color: #FFFFFF;
	backgroundColor: #FFFFFF;
	text-roll-over-color:#445188;
}


.partyType
{
	color: #ed1c24;
	font-size: 18pt;
	font-weight:bold;
}
