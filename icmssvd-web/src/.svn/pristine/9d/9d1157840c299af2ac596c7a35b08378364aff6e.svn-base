
@namespace s "library://ns.adobe.com/flex/spark";
@namespace mx "library://ns.adobe.com/flex/mx";
@namespace j "hk.judiciary.fmk.view.component.*";

global
{
	font-family:Arial, Helvetica,sans-serif !important;
	font-weight:bold;
	fontSize: 12;
}
j|Label, s|label, mx|Label
{
	font-family:Arial, Helvetica,sans-serif !important;
}

s|Application
{
	background-color:#FFFFFF;
	modalTransparencyBlur: 0;
	modalTransparency: 0.1;
}

s|TextInput, j|TextInput
{
	borderColor: #A9A9A9;
}

mx|ToolTip{
	font-size:16;
}

mx|DataGrid
{
	alternating-item-colors:#FFFFFF, #F3F4F9;
	header-colors:#445188, #445188;
	letter-spacing:0;
	/*
	horizontal-grid-lines:true;
	horizontal-grid-line-color:#FFFFFF;
	vertical-grid-lines:true;
	vertical-grid-line-color:#FFFFFF;
	*/
	use-roll-over:true;
	roll-over-color:#C9C9C9;
	text-roll-over-color:#000000;
	border-weight:0;
	border-color:#D5D7D8;
	color:#20454D;
	text-indent:0;
	text-selected-color:#F9F9F9;
	selection-color:#002060;
	font-weight:normal;
	chrome-color:#8C9194;
	
	columnDropIndicatorSkin: ClassReference("mx.skins.halo.DataGridColumnDropIndicator");
	columnResizeSkin: ClassReference("mx.skins.halo.DataGridColumnResizeSkin");
	headerDragProxyStyleName: "headerDragProxyStyle";
	headerBackgroundSkin: ClassReference("mx.skins.halo.DataGridHeaderBackgroundSkin");
	headerSeparatorSkin: ClassReference("mx.skins.halo.DataGridHeaderSeparator");
	
	headerStyleName: "advancedDataGridStyles";
	sortArrowSkin: ClassReference("mx.skins.halo.DataGridSortArrow");
	stretchCursor: Embed(source="Assets.swf",symbol="cursorStretch");
}

s|DataGrid
{
	alternatingRowColors: #FFFFFF, #F3F4F9;
}

mx|AdvancedDataGrid
{
	backgroundAlpha:1;
	alternating-item-colors:#FFFFFF, #F3F4F9;
	
	
	header-colors:#445188, #445188;
	
	letter-spacing:0;
	/*
	horizontal-grid-lines:true;
	horizontal-grid-line-color:#FFFFFF;
	vertical-grid-lines:true;
	vertical-grid-line-color:#FFFFFF;
	*/
	use-roll-over:true;
	roll-over-color:#C9C9C9;
	text-roll-over-color:#000000;
	border-weight:0;
	border-color:#D5D7D8;
	color:#20454D;
	text-indent:0;
	text-selected-color:#F9F9F9;
	selection-color:#002060;
	font-weight:normal;
	chrome-color:#8C9194;
	columnDropIndicatorSkin: ClassReference("mx.skins.halo.DataGridColumnDropIndicator");
	columnResizeSkin: ClassReference("mx.skins.halo.DataGridColumnResizeSkin");
	headerDragProxyStyleName: "headerDragProxyStyle";
	headerBackgroundSkin: ClassReference("mx.skins.halo.DataGridHeaderBackgroundSkin");
	headerSeparatorSkin: ClassReference("mx.skins.halo.DataGridHeaderSeparator");
	headerHorizontalSeparatorSkin: ClassReference("mx.skins.halo.AdvancedDataGridHeaderHorizontalSeparator");
	headerStyleName: "advancedDataGridStyles";
	sortArrowSkin: ClassReference("mx.skins.halo.DataGridSortArrow");
	stretchCursor: Embed(source="Assets.swf",symbol="cursorStretch");
}

mx|PrintOLAPDataGrid{
	alternatingItemColors: #FFFFFF, #FFFFFF;
	borderColor: 0;
	columnResizeSkin: ClassReference("mx.skins.halo.DataGridColumnResizeSkin");
	headerColors: #FFFFFF, #FFFFFF;
	headerSeparatorSkin: ClassReference("mx.skins.halo.DataGridHeaderSeparator");
	headerStyleName: "advancedDataGridStyles";
	horizontalGridLineColor: 0;
	horizontalGridLines: true;
	stretchCursor: Embed(source="Assets.swf",symbol="cursorStretch");
	verticalGridLineColor: #000000;
}
